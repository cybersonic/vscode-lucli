{
  "comments": {
    "lineComment": "#"
  },
  "folding": {
    "markers": {
      "start": "^\\s*#@(env:[^\\s]+|dev|development|staging|stage|prod|production|test|testing|local)\\b",
      "end": "^\\s*#@end\\b"
    }
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\s\\(\\)\\[\\]\\{\\}\"'`,;:#]+)"
}
