{
  "name": "vscode-lucli",
  "displayName": "LuCLI",
  "description": "Syntax highlighting and completion for LuCLI .lucli scripts",
  "version": "0.1.0",
  "publisher": "markdrew",
  "repository": {
    "type": "git",
    "url": "https://github.com/cybersonic/vscode-lucli.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "icon": "assets/lucli-icon-128.png",
  "categories": [
    "Programming Languages"
  ],
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "lucli",
        "aliases": [
          "LuCLI Script",
          "lucli"
        ],
        "extensions": [
          ".lucli"
        ],
        "firstLine": "^#!.*\\blucli\\b",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lucli",
        "scopeName": "source.lucli",
        "path": "./syntaxes/lucli.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "lucli.runFile",
        "title": "Run LuCLI File",
        "category": "LuCLI"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "lucli.runFile",
          "when": "resourceLangId == lucli",
          "group": "navigation@10"
        }
      ],
      "editor/context": [
        {
          "command": "lucli.runFile",
          "when": "resourceLangId == lucli",
          "group": "navigation@10"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "LuCLI",
      "properties": {
        "lucli.path": {
          "type": "string",
          "default": "",
          "description": "Path to LuCLI executable or JAR file. Leave empty to use 'lucli' from PATH. If a .jar file is provided, 'java -jar' will be used."
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": [
          "/lucee.json",
          "lucee.json"
        ],
        "url": "https://lucli.dev/schemas/v1/lucee.schema.json"
      },
      {
        "fileMatch": [
          "/module.json",
          "module.json"
        ],
        "url": "https://lucli.dev/schemas/v1/module.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo \"No tests yet\"",
    "package": "vsce package",
    "publish": "vsce publish",
    "release:patch": "npm version patch && npm run package && npm run publish",
    "release:minor": "npm version minor && npm run package && npm run publish",
    "release:major": "npm version major && npm run package && npm run publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  }
}
